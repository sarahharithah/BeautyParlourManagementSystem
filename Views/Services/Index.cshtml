@{
    ViewData["Title"] = "Services List";
}

@model IEnumerable<BeautyParlourManagementSystemAPI.Models.Services>

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4" style="color: #9932CC; font-weight: bold;">Beauty & Wellness Services</h2>
        <hr class="mb-4">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <p class="text-muted mb-0">Discover and oversee our specialized beauty services.</p>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus-circle"></i> + Add New Service
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered text-center">
                <thead class="bg-pink text-black">
                    <tr>
                        <th><i class="fas fa-cut"></i> Service Name</th>
                        <th><i class="fas fa-dollar-sign"></i> Price (RM)</th>
                        <th><i class="fas fa-info-circle"></i> Description</th>
                        <th><i class="fas fa-cogs"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model)
                    {
                        <tr>
                            <td>@service.ServiceName</td>
                            <td>@service.ServiceCost.ToString("0.00")</td>
                            <td>@service.ServiceDescription</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@service.ServiceID" class="btn btn-warning btn-sm me-1">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@service.ServiceID" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
