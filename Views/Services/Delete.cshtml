@model BeautyParlourManagementSystemAPI.Models.Services

<div class="container mt-4">
    <div class="card shadow-lg p-4 border-danger">
        <h2 class="text-center text-danger"><i class="fas fa-exclamation-triangle"></i> Delete Service</h2>
        <p class="text-center text-muted">Are you sure you want to delete this service? This action cannot be undone.</p>
        <hr class="mb-4">

        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="alert alert-warning text-center">
                    <i class="fas fa-cut fa-2x"></i>
                    <h4 class="mt-2">@Model.ServiceName</h4>
                </div>

                <dl class="row">
                    <dt class="col-sm-4"><i class="fas fa-dollar-sign"></i> Service Cost</dt>
                    <dd class="col-sm-8">RM @Model.ServiceCost.ToString("0.00")</dd>

                    <dt class="col-sm-4"><i class="fas fa-info-circle"></i> Description</dt>
                    <dd class="col-sm-8">@Model.ServiceDescription</dd>
                </dl>

                <div class="d-flex justify-content-center mt-4">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ServiceID" />
                        <button type="submit" class="btn btn-danger me-3">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>