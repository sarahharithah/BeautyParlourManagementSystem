@model BeautyParlourManagementSystemAPI.Models.Products

<div class="container mt-4">
    <div class="card shadow-lg p-4 text-center">
        <h2 class="text-danger"><i class="fas fa-trash-alt"></i>Delete Product</h2>
        <hr>

        <h4 class="mb-4">Are you sure you want to delete this product?</h4>

        <div class="card bg-light p-3">
            <dl class="row text-start">
                <dt class="col-sm-4"><i class="fas fa-tag"></i>Product Name:</dt>
                <dd class="col-sm-8">@Model.ProductName</dd>

                <dt class="col-sm-4"><i class="fas fa-dollar-sign"></i>Product Cost:</dt>
                <dd class="col-sm-8">RM @Model.ProductCost</dd>

                <dt class="col-sm-4"><i class="fas fa-info-circle"></i>Product Description:</dt>
                <dd class="col-sm-8">@Model.ProductDescription</dd>

                <dt class="col-sm-4"><i class="fas fa-box"></i>Stock Quantity:</dt>
                <dd class="col-sm-8">@Model.StockQuantity</dd>
            </dl>
        </div>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="ProductID" />
            <button type="submit" class="btn btn-danger me-2"><i class="fas fa-trash"></i>Confirm Delete</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times"></i>Cancel</a>
        </form>
    </div>
</div>