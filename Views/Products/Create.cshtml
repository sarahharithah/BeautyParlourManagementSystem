@model BeautyParlourManagementSystemAPI.Models.Products

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4" style="color: #9932CC; font-weight: bold;">Add New Products</h2>
        <hr>

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="ProductName" class="form-label"><i class="fas fa-tag"></i> Product Name</label>
                <input asp-for="ProductName" class="form-control" placeholder="Enter product name..." />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProductCost" class="form-label"><i class="fas fa-dollar-sign"></i> Product Cost (RM)</label>
                <input asp-for="ProductCost" class="form-control" placeholder="Enter price..." />
                <span asp-validation-for="ProductCost" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProductDescription" class="form-label"><i class="fas fa-info-circle"></i> Product Description</label>
                <textarea asp-for="ProductDescription" class="form-control" rows="3" placeholder="Enter product description..."></textarea>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StockQuantity" class="form-label"><i class="fas fa-box"></i> Stock Quantity</label>
                <input asp-for="StockQuantity" class="form-control" placeholder="Enter stock quantity..." />
                <span asp-validation-for="StockQuantity" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success me-2"><i class="fas fa-save"></i> Save</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>