@{
    ViewData["Title"] = "Product Page";
}

@model IEnumerable<BeautyParlourManagementSystemAPI.Models.Products>

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4" style="color: #9932CC; font-weight: bold;">Products Available</h2>
        <hr>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <p class="text-muted mb-0">Browse and look for more details about our specialized beauty products and treatments.</p>
            <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus-circle"></i>+ Add New Product</a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered text-center">
                <thead class="bg-pink text-black">
                    <tr>
                        <th><i class="fas fa-tag"></i>Product Name</th>
                        <th><i class="fas fa-dollar-sign"></i>Price (RM)</th>
                        <th><i class="fas fa-info-circle"></i>Description</th>
                        <th><i class="fas fa-box"></i>Stock</th>
                        <th><i class="fas fa-cogs"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.ProductCost.ToString("0.00")</td>
                            <td>@product.ProductDescription</td>
                            <td>@product.StockQuantity</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@product.ProductID" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@product.ProductID" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
