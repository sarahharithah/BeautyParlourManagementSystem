@model BeautyParlourManagementSystemAPI.Models.Appointment

<div class="container mt-4">
    <h2 class="text-center mb-4" style="color: #9932CC; font-weight: bold;">Create New Appointment</h2>

    <div class="card shadow-lg p-4">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="CustomerName" class="form-label"><i class="fas fa-user"></i> Customer Name</label>
                <input asp-for="CustomerName" class="form-control" placeholder="Enter customer name" required />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AppointmentDate" class="form-label"><i class="fas fa-calendar-alt"></i> Appointment Date</label>
                <input asp-for="AppointmentDate" class="form-control" type="date" required />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AppointmentStatus" class="form-label"><i class="fas fa-check-circle"></i> Appointment Status</label>
                <select asp-for="AppointmentStatus" class="form-select" required>
                    <option value="">-- Select Status --</option>
                    <option value="Pending">Pending</option>
                    <option value="Confirmed">Confirmed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
                <span asp-validation-for="AppointmentStatus" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AppointmentRemark" class="form-label"><i class="fas fa-comment"></i> Appointment Remark</label>
                <textarea asp-for="AppointmentRemark" class="form-control" rows="3" placeholder="Enter any remarks (optional)"></textarea>
                <span asp-validation-for="AppointmentRemark" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Create Appointment</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>

