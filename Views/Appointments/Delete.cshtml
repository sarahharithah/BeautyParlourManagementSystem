@model BeautyParlourManagementSystemAPI.Models.Appointment

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-danger"><i class="fas fa-exclamation-triangle"></i> Delete Appointment</h2>

        <div class="alert alert-warning text-center">
            <strong>Are you sure you want to delete this appointment?</strong> This action cannot be undone.
        </div>

        <div class="mt-3">
            <dl class="row">
                <dt class="col-sm-3"><i class="fas fa-user"></i> Customer Name:</dt>
                <dd class="col-sm-9">@Model.CustomerName</dd>

                <dt class="col-sm-3"><i class="fas fa-calendar-alt"></i> Appointment Date:</dt>
                <dd class="col-sm-9">@Model.AppointmentDate.ToShortDateString()</dd>

                <dt class="col-sm-3"><i class="fas fa-check-circle"></i> Appointment Status:</dt>
                <dd class="col-sm-9">@Model.AppointmentStatus</dd>

                <dt class="col-sm-3"><i class="fas fa-comment"></i> Appointment Remark:</dt>
                <dd class="col-sm-9">@Model.AppointmentRemark</dd>
            </dl>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="AppointmentID" />
            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-success me-3"><i class="fas fa-save"></i> Delete</button>
                <a asp-action="Index" class="btn btn-secondary btn-cancel"><i class="fas fa-times"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>